		<main id="sites"> 
			<div class="lazy">
				<label for="filter">Filter the list </label>
				<input class="search" id="filter" type="search" placeholder="Filter…" autocomplete="off">
				<p><span>Sort the list by</span>
					<button class="sort" data-sort="domain">Domain</button>
					<button class="sort" data-sort="launch">Date</button>
					<button class="sort" data-sort="title">Title</button>
					<button class="sort" data-sort="description">Description</button>
					<button class="sort" data-sort="author">Author</button>
				</p>
			</div>
			<ol class="list">
				{%- assign sortedsites = sites | values | sort: "launchDate" | reverse -%}
				{%- for site in sortedsites -%}
				{%- unless site.excludeFromList %}
				<!-- {%- increment counter -%} -->
				<li>
					<h2><a class="title" href="{{ site.url }}">{{ site.title | truncate: 60, "…" }}</a></h2>
					<p><img src="/images/fts.png" alt width="240"></p>
					<code>
						<span class="domain">{{ site.url | domainify }}</span>
						<time class="launch" datetime="{{ site.launchDate | date: "%Y-%m-%d" }}">{{ site.launchDate | date: "%b %Y" }}</time>
					</code>
					{%- if site.description %}
					<div class="description">{{ site.description | truncate: 160, "…" }}</div>
					{%- endif %}
					{%- if site.authorSite %}
					<em>by <a class="author" href="{{ site.authorSite }}">{{ site.author }}</a></em>
					{%- elsif site.author -%}
					<em>by <span class="author">{{ site.author }}</span></em>
					{%- endif %}
				</li>
				{%- endunless -%}
				{%- endfor %}
			</ol>
			<ul class="pagination"></ul>
			<small>{{ counter }} Total sites listed. Last updated: {{ "now" | date: "%B %e, %Y" }}.</small>
			</main>
		<script src="/bundle.js"></script>
	</body>
